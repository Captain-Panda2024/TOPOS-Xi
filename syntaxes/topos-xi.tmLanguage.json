{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "TOPOS-Îž",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [{
                "name": "keyword.control.topos-xi",
                "match": "\\b(Space|shape|mapping|properties|path|continuous|quantum)\\b"
            }]
        },
        "strings": {
            "name": "string.quoted.double.topos-xi",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.topos-xi",
                    "match": "\\\\."
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.topos-xi",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.topos-xi",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        }
    },
    "scopeName": "source.topos-xi"
}
